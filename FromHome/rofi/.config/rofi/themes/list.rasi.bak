@import "colors_dark.rasi"
@import "~/.cache/wal/colors-rofi-dark.rasi"

* {
    background-color:   @background;
    text-color:         @foreground;
}

window {
    width:      100%;
    anchor:     north;
    location:   north;
    padding:    3;
    dynamic:    true;
}

listview {
    spacing:    5px;
    dynamic:    true;
}

entry {
    expand:     false;
    width:      16em;
}

element {
    padding: 0px 2px 2px;
}

element selected {
    border: 2px;
    border-color: @BGA;
    background-color: @BGA;
}

element-text selected {
    highlight:        None;
    background-color: @BGA;
    text-color:       @BG;
}
