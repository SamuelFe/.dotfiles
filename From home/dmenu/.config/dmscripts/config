# DMEDITOR="emacsclient -c -a emacs"

# dm-logout
# logout_locker='loginctl lock-session' # this worked for Kubuntu 20.01
# logout_locker='dm-tool lock'
logout_locker='.config/Scripts/i3lock/launch.sh'

# dm-bookman 
# bookman_show_source=1

# ambient_sounds script
sounds_dir="${HOME}/Music/Ambient\ Sounds"

# dm-setbg
# setbg_dir="${HOME}/.wallpapers"

# dm-maim
# maim_dir="${HOME}/Screenshots"
# maim_file_prefix="maim"

# bookmarks
declare -A bookmarks_list
bookmarks_list[no - Notion]="https://www.notion.so/samuelfernandes/Action-Zone-e59b5f939ec34890b577b24a9b2d1525"
bookmarks_list[yt - YouTube]="https://youtube.com"
bookmarks_list[md - Moodle]="https://moodle.ufsc.br"
bookmarks_list[gp - Moodle Grupos]="https://grupos.moodle.ufsc.br"
