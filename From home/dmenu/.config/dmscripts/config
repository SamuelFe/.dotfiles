# confedit script
confedit_editor="$DMEDITOR"
declare -A confedit_list
confedit_list[alacritty]="$HOME/.config/alacritty/alacritty.yml"
confedit_list[bash]="$HOME/.bashrc"
confedit_list[dmenu scripts]="$HOME/.config/dmscripts/config"
confedit_list[dunst]="$HOME/.config/dunst/dunstrc"
confedit_list[i3]="$HOME/.config/i3/config"
confedit_list[mpv]="$HOME/.config/mpv/mpv.conf"
confedit_list[neovim]="$HOME/.config/nvim/init.vim"
confedit_list[polybar]="$HOME/.config/polybar/config_i3.ini"
confedit_list[powerline]="$HOME/.config/powerline-shell/config.json"
confedit_list[qutebrowser]="$HOME/.config/qutebrowser/config.py"
confedit_list[starship]="$HOME/.config/starship.toml"


# translate script config
# Get language codes from here: https://github.com/TheDavidDelta/lingva-translate/blob/main/utils/languages.json
declare -A lang_map
lang_map[All]=all
lang_map[Automatic]=auto
lang_map[French]=fr
lang_map[English]=en
lang_map[Portuguese]=pt

declare -A translation_list
translation_list[All]=all
translation_list[Automatic]=auto
translation_list[Portuguese -> French]="pt -> fr"
translation_list[Portuguese -> English]="pt -> en"
translation_list[French -> Portuguese]="fr -> pt"
translation_list[English -> Portuguese]="en -> pt"

_revision=17
